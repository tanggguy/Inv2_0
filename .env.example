# Configuration du Système de Trading
# Copier ce fichier en .env et remplir avec vos valeurs

# Mode de fonctionnement
TRADING_MODE=backtest  # backtest, paper, live
ENVIRONMENT=development  # development, production

# Capital Initial
INITIAL_CAPITAL=100000

# Données
DATA_SOURCE=yfinance  # yfinance, alpaca, binance
DATA_CACHE_ENABLED=true

# API Keys (ne pas commiter le vrai .env !)
ALPHA_VANTAGE_API_KEY=your_key_here
POLYGON_API_KEY=your_key_here

# Alpaca (Paper Trading)
ALPACA_API_KEY=your_key_here
ALPACA_SECRET_KEY=your_secret_here
ALPACA_BASE_URL=https://paper-api.alpaca.markets

# Binance (Crypto)
BINANCE_API_KEY=your_key_here
BINANCE_SECRET_KEY=your_secret_here

# Telegram Notifications
TELEGRAM_BOT_TOKEN=your_token_here
TELEGRAM_CHAT_ID=your_chat_id_here

# Risk Management
MAX_POSITION_SIZE=0.1  # 10% du capital par position
MAX_RISK_PER_TRADE=0.02  # 2% risque max par trade
MAX_PORTFOLIO_RISK=0.06  # 6% risque total portfolio

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
LOG_TO_FILE=true
